<%- include('../partials/header') %>
<h2><%= title %> Characters</h2>
<% if (topics.length) { %>
<ul>
  <% topics.forEach(function(topic) { %>
  <li>
    <a href="/boards/<%= board._id %>/topics/<%= topic._id %>">
      <%= topic.name %> <br />
      <img src="<%= topic.imageURL %>" alt="character image" />
    </a>
    <% if (user?._id.equals(topic.user)) { %>
      <div style="background-color: blue;">
      <form action="/boards/<%= board._id %>/topics/<%= topic._id %>?_method=DELETE" method="POST">
        <button type="submit">DELETE TOPIC</button>
      </form>
    </div>
    <div style="background-color: red;">
      <a href="/topics/<%= topic._id %>/edit">EDIT TOPIC</a>
    </div>
    <% } %>
  </li>
  <% }) %>
</ul>
<% } else { %>
<h3>No Topics.</h3>
<% }%>
<a href="/boards/<%= board._id %>/topics/new">NEW TOPIC</a>
<%- include('../partials/footer') %>
