<%- include('../partials/header') %>
<h3>Edit Topic</h3>
<form action="/topics/<%= topic._id %>?_method=PUT" method="POST">
    <label for="">Name:</label>
    <input type="text" name="name" value="<%= topic.name %>"/>
    <label for="">Image-url:</label>
    <input type="text" name="imageURL" value="<%= topic.imageURL %>"/>
    <label for="">Description:</label>
    <input type="text" name="description" value="<%= topic.description %>"/>
    <label for="">Gender</label>
    <select name="gender" id="">
      <option value="Male">Male</option>
      <option value="Female">Female</option>
      <option value="Other">Other</option>
    </select>
    <label for="">Age</label>
    <input type="number" name="age" value="<%= topic.age %>"/>
<button type="submit">Update Topic</button>
</form>

<%- include('../partials/footer') %>