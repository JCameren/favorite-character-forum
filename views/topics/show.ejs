<%- include('../partials/header') %>

<p><%= topic.name %></p>
<img src="<%= topic.imageURL %>" alt="character avatar">
<p><%= topic.age %></p>
<p><%= topic.gender %></p>
<p><%= topic.description %></p>
<% if(user) { %>
    <h3>Add Comment</h3>
    <form action="/topics/<%= topic._id %>/comment" method="POST">
        <textarea name="post""></textarea>
        <button type="submit">Submit Comment</button>
    </form>
<% } else { %>
    <h3>Must sign in to add a review.</h3>
<% } %>

<% if (topic.comments.length) { %>
<% topic.comments.forEach(function(comment) { %>
    <img src="<%= comment.userAvatar %>" alt="avatar" referrerpolicy="no-referrer">
    <p><%= comment.userName %></p>
    <p><%= comment.post %></p>
<% }) %>
<% } else { %>
<h3>No comments yet. Be the first!</h3>
<% } %>


<%- include('../partials/footer') %>